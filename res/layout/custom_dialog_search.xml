<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="0"
        android:background="#a0000000" >

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_game_gris_simple"
                android:padding="8dp" >

                <TextView
                    android:id="@+id/tv_texto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="0"
                    android:text="Selecciona provincia :"
                    android:textColor="#333333"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0"
                    android:background="#333333"
                    android:gravity="bottom"
                    android:orientation="horizontal" >
                </LinearLayout>

                <Button
                    android:id="@+id/buttonSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spinnerProvincias"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="25dp"
                    android:layout_weight="0"
                    android:background="#a70084"
                    android:minHeight="32dip"
                    android:minWidth="164dip"
                    android:text="Buscar"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerProvincias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_texto"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/GrisOscuro"
                    android:padding="5dp" />

                <Button
                    android:id="@+id/ButtonCercaDeMi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/buttonSearch"
                    android:layout_below="@+id/buttonSearch"
                    android:layout_weight="0"
                    android:background="#a70084"
                    android:minHeight="32dip"
                    android:minWidth="164dip"
                    android:text="Cerca de mi"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/imageViewClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:clickable="true"
                android:src="@drawable/icono_salir" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
